<div class="space-y-6">
  <!-- Areas of Expertise -->
  <div class="border border-gray-700 rounded-lg p-4 bg-black">
    <h3 class="text-lg font-semibold text-white mb-3">Areas of Expertise</h3>
    <div class="flex flex-wrap gap-2">
      {
        cvData.areas_of_expertise.map((area) => (
          <span class="px-3 py-1 bg-gray-800 text-gray-300 rounded-full text-sm border border-gray-600">
            {area}
          </span>
        ))
      }
    </div>
  </div>

  <!-- Technical Skills -->
  <div class="border border-gray-700 rounded-lg p-4 bg-black">
    <h3 class="text-lg font-semibold text-white mb-3">Technical Skills</h3>
    <div class="flex flex-wrap gap-2">
      {
        cvData.technical_skills.map((skill) => (
          <span class="px-3 py-1 bg-gray-800 text-gray-300 rounded-full text-sm border border-gray-600">
            {skill}
          </span>
        ))
      }
    </div>
  </div>

  <!-- Experience -->
  <div class="space-y-4">
    <h3 class="text-2xl font-bold text-white">Professional Experience</h3>

    {
      cvData.experience.map((exp) => (
        <div class="border border-gray-700 rounded-lg p-4 bg-black">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-3">
            <h4 class="text-lg font-semibold text-white">{exp.title}</h4>
            <span class="text-sm text-gray-400">{exp.date}</span>
          </div>
          <p class="text-primary mb-2">
            {exp.company} • {exp.location}
          </p>

          <div class="mb-3">
            <h5 class="text-sm font-medium text-white mb-2">Tech Stack:</h5>
            <div class="flex flex-wrap gap-2">
              {exp.tech_stack.map((tech) => (
                <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded text-xs border border-gray-600">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <ul class="list-disc list-inside space-y-1 text-sm text-gray-300">
            {exp.responsibilities.map((resp) => (
              <li>{resp}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>

  <!-- Career Highlights -->
  <div class="border border-gray-700 rounded-lg p-4 bg-black">
    <h3 class="text-lg font-semibold text-white mb-3">Career Highlights</h3>
    <ul class="list-disc list-inside space-y-2 text-sm text-gray-300">
      {cvData.career_highlights.map((highlight) => <li>{highlight}</li>)}
    </ul>
  </div>

  <!-- Education -->
  <div class="border border-gray-700 rounded-lg p-4 bg-black">
    <h3 class="text-lg font-semibold text-white mb-3">Education</h3>
    <div class="text-sm text-gray-300">
      <p class="text-white font-medium">{cvData.education.degree}</p>
      <p>{cvData.education.institution}</p>
      <p>{cvData.education.location} • {cvData.education.year}</p>
    </div>
  </div>
</div>
